/* pages/setting/setting.wxss */


.box{
	margin-bottom: 20rpx;
	padding: 20rpx 30rpx;
	background-color: #fff;
}

.title{
	padding: 10rpx 0;
	color: #40a7e7;
	font-size: 30rpx;
}

.main{
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 10rpx 0;
}

.left{
	color: #777274;
	font-size: 26rpx;
}

.wx-switch-input{
	width: 80rpx !important;
	height: 40rpx !important;
}
.wx-switch-input::before{
	width: 840rpx !important;
	height: 36rpx !important;
}
.wx-switch-input::after{
	width: 40rpx !important;
	height: 36rpx !important;
}

.multi{
	display: flex;
	flex-direction: column;
}

.mini{
	font-size: 22rpx;
}

.light-level{
	width: 98vw;
	margin-left: -2vw;
	/* border: 1px solid red; */
}

.toast .mask{
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	z-index: 100;
	background-color: rgba(0, 0, 0, .5)
}

.toast .wrapper{
	position: fixed;
	top: calc(50% - 200rpx);
	left: calc(50% - 200rpx);
	width: 400rpx;
	height: 400rpx;
	padding: 40rpx;
	box-sizing: border-box;
	border-radius: 20rpx;
	background-color: #fff;
	z-index: 101;
	overflow: auto;
}

.toast .b-title{
	margin: 10rpx 0;
	font-size: 32rpx;
	color: #40a7e7;
}

.toast .content{
	font-size: 28rpx;
	line-height: 1.5
}

::-webkit-scrollbar{
	display: none;
}