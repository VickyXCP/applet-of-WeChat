/**index.wxss**/

.container {
  width: 100%;
  height: 100%;
}

.img {
  position: fixed;
  top: 0;
  left: 0;
  z-index: -1;
  width: 100%;
  height: 100%;
}

.top {
  position: fixed;
	top: 10rpx;
	left: 7%;
  width: 86%;
  margin: 20rpx auto;
  border-bottom: 2rpx solid #fff;
}

.top .iconfont {
  color: #eee;
  font-size: 56rpx;
}

.top .placeholderclass {
  color: #fff;
  font-size: 28rpx;
}

.top input {
	display: inline-block;
  color: #fff;
  font-size: 28rpx;
}

.wrapper{
	margin-top: 140rpx;
}

.user {
  display: flex;
  height: 60rpx;
  line-height: 60rpx;
  padding: 20rpx 50rpx;
  color: white;
  font-size: 28rpx;
}

.user .avatar {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
  border-radius: 50%;
	overflow: hidden;	
}

.user .iconfont {
  margin-left: 20rpx;
  margin-top: 2rpx;
}

.info {
  display: flex;
  justify-content: space-between;
	align-items: center;
  padding: 0 50rpx;
	color: white;
	font-size: 28rpx
}
.info .city{
	margin: 0 20rpx;
	font-size: 30px
}
.info .iconfont{
	vertical-align: 10rpx;
}

.detail{
	text-align: center;
	color: white
}
.detail .message{
	padding: 30rpx 50rpx 0;
	box-sizing: border-box;
	font-size: 22rpx;
	color: #fff;
}
.detail .temp{
	height: 300rpx;
	font-size: 200rpx;
	/* border: 2rpx solid red */
}
.detail .temp text{
	position: relative;
	top: -100rpx;
	font-size: 50rpx;	
}
.detail .weather{
	margin: 30rpx 0;
	font-size: 30rpx;	
}
.detail .pm{
	width: 140rpx;
	height: 44rpx;
	line-height: 44rpx;
	margin: 0 auto;
	border-radius: 22rpx;
	text-align: center;
	font-size: 24rpx;	
	background-color: rgba(137, 133, 84, 0.7)
}

.guide{
	margin-top: 60rpx;
	color: #fff;
	font-size: 24rpx;
	background-color: rgba(88, 56, 18, 0.7);
}

.guide .g-title{
	padding: 20rpx 0;
	border-bottom: 2rpx solid #756044;
	text-align: center;
}

.guide .g-items{
	display: flex;
	justify-content: space-around;
	padding-bottom: 16rpx;
	text-align: center
}

.guide .item view{
	margin-top: 14rpx;
}

.guide .item image{
	width: 44rpx;
	vertical-align: text-top
}

.details{
	display: flex;
	align-items: center;
	flex-wrap: wrap;
	margin-top: 40rpx;
	/* padding: 16rpx 0; */
	background-color: rgba(0, 0, 0, .5);
	font-size: 24rpx
}

.details .detail{
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: space-around;
	width: 25%;
	height: 100rpx;
	border-right: 1rpx solid rgba(255, 255, 255, 0.2);
	border-bottom: 1rpx solid rgba(255, 255, 255, 0.2);
	box-sizing: border-box;
}

.lifestyles{
	margin-top: 40rpx;
	background-color: rgba(0, 0, 0, .5);
	color: #fff;
}

.lifestyles .lifestyle{
	display: flex;
	justify-content: flex-start;
	align-items: center;
	margin: 0 30px;
	padding: 20rpx 0;	
	border-bottom: 1rpx solid rgba(255, 255, 255, 0.2);
}

.lifestyles .lifestyle>view{
	display: flex;
	flex-direction: column;
	align-items: flex-start;
	justify-content: space-between
}

.lifestyles .lifestyle .brf{
	font-size: 30rpx
}

.lifestyles .lifestyle .txt{
	font-size: 24rpx
}

.lifestyles .lifestyle image{
	width: 80rpx;
	padding: 0 24rpx;
}

.lifestyles .footer{
	text-align: center;
	font-size: 20rpx;
	padding: 20rpx 0 10rpx
}

.menus .menu{
	position: fixed;
	bottom: 150rpx;
	right: 70rpx;
	width: 80rpx;
	height: 80rpx;
	border-radius: 50%;
	opacity: 0;
	z-index: 100
}

.menus .share{
	background: rgba(0, 0, 0, 0);
}
.menus .main{
	opacity: 1
}

.openSettingButton{
	position: fixed;
	z-index: 102;
	width: 100%;
	height: 100%;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	background-color: rgba(0, 0, 0, .5)
}
.openSettingButton image{
	position: relative;
	left: calc(50% - 50rpx);
	margin-top: calc(50% + 50rpx);
	width: 100rpx;
	height: 100rpx;
}

.openSettingButton button{
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	border: 1px solid red;
	opacity: 0;
}
